# ClickHouse Connection (Production)
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=anomaly_ml

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Django Integration (WebSocket Notifications)
# URL для отправки уведомлений через Django Channels
# В Docker: http://web:8000, вне Docker: http://localhost:8000
DJANGO_NOTIFICATION_URL=http://web:8000

# CORS Security (comma-separated list of allowed origins)
# For production, specify exact domains: https://example.com,https://app.example.com
# For development, localhost is allowed by default
ALLOWED_ORIGINS=http://localhost,http://localhost:8000,http://localhost:3000

# API Key Security (comma-separated list of valid API keys)
# Leave empty to disable validation (dev mode)
# For production, generate strong random keys:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
# VALID_API_KEYS=key1,key2,key3
VALID_API_KEYS=

# Model Configuration
MODEL_PATH=models/tcn_model.pt
WINDOW_SIZE=24
BATCH_SIZE=32
DEVICE=cpu

# Anomaly Thresholds (will be overridden by model metadata if exists)
ANOMALY_THRESHOLD_95=0.5
ANOMALY_THRESHOLD_99=0.8

# Production Mode
# Set to true to use production ClickHouse from main docker-compose
USE_PRODUCTION_CH=true

# If connecting to external ClickHouse
# CLICKHOUSE_HOST=localhost
# CLICKHOUSE_PORT=8123
