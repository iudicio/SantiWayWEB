
# ClickHouse Connection
CLICKHOUSE_HOST=clickhouse          # Docker: 'clickhouse', External: 'localhost' или IP
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=anomaly_ml       # База данных с ML таблицами
CLICKHOUSE_USER=default              # Пользователь ClickHouse
CLICKHOUSE_PASSWORD=                 # Пароль (пустой для локальной разработки)

# API Configuration
API_HOST=0.0.0.0              
API_PORT=8000                     
API_RELOAD=True                     

DJANGO_NOTIFICATION_URL=http://web:8000


ALLOWED_ORIGINS=http://localhost,http://localhost:8000,http://localhost:3000


# Генерация: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Example: VALID_API_KEYS=abc123xyz,def456uvw
VALID_API_KEYS=

# ML Model Configuration
MODEL_PATH=models/tcn_model.pt              # Базовая: tcn_model.pt, Advanced: tcn_model_advanced.pt
WINDOW_SIZE=24
BATCH_SIZE=32                      

# Device: auto (автовыбор), cuda (GPU), mps (Apple Silicon), cpu
DEVICE=auto

ANOMALY_THRESHOLD_95=0.87            # 95-й перцентиль
ANOMALY_THRESHOLD_99=0.92            # 99-й перцентиль


# Режим подключения к ClickHouse
USE_PRODUCTION_CH=true             

